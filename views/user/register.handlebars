<header class="index-header">注册</header>  
<section class="user-form">
  <form id="registerform" method="post" action="registersubmit">
    <div class="user-form-field">
      <label>用户名：</label>
      <span><input id="registername" name="name" type="text" placeholder="汉字或英文字母"></span>
    </div>
    <div class="user-form-field">
      <label>邮箱：</label>
      <span><input id="registeremail" name="email" type="email" placeholder="电子邮箱"></span>
    </div>
    <div class="user-form-field">
      <label>密码：</label>
      <span><input id="registerpass"  name="password" type="pasword" placeholder="密码"></span>
    </div>
    <div class="user-form-field">
      <label>确认密码：</label>
      <span><input id="comregisterpass"  type="pasword" placeholder="确认密码"></span>
    </div>
    <div class="user-form-field">
      <label></label>
      <span><button type="submit" class="btn btn-default">注册</button></span>
    </div>
  </form>
</section>
<script src="/javascripts/verification.js"></script>
<script>
  sp.verification().submitForm($('#registerform'),$('#registerpass'),$('#comregisterpass'),$('#registername'),$('#registeremail'));
</script>